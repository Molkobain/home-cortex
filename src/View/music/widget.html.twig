<div class="widget">
    <div id="dz-root">
    </div>
    <div class="player" id="player">
        <div class="player-cover" id="player-cover">
            <img src="https://e-cdns-images.dzcdn.net/images/cover/f1d7fa1587af21c53b3ae406696277f3/250x250.jpg" height="220" width="220" />
            <div class="player-track">
                <div aria-hidden="true">
                    <div class="player-track-title">Back To Black</div>
                    <div class="player-track-artist">par&nbsp;Amy Winehouse</div>
                </div>
            </div>
            <div class="player-progress">
                <div class="progress progress-background"></div>
                <div class="progress progress-buffer" style="width: 100%;"></div>
                <div class="progress progress-seek" style="width: 20%;">
                    <div class="progress-seek-overlay"></div>
                </div>
                <div class="progress-time">01:00</div>
                <div class="progress-length">04:01</div>
            </div>
            <div class="player-overlay"></div>
        </div>
        <div class="player-controls">
            <ul class="controls controls-main clearfix">
                <li>
                    <button class="control control-prev" type="button" disabled="" title="Précédent" aria-label="Précédent">PREVIOUS
                    </button>
                </li>
                <li>
                    <button class="control control-play" type="button" aria-label="Play" title="Play">PLAY/PAUSE
                    </button>
                </li>
                <li>
                    <button class="control control-next" type="button" title="Suivant" aria-label="Suivant">NEXT
                    </button>
                </li>
            </ul>
        </div>
    </div>
</div>

<script src="https://e-cdns-files.dzcdn.net/js/min/dz.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        // Initializing Deezer API
        setTimeout(function(){
            DZ.init({
                appId: '{{ aPlayer.sAppId }}',
                channelUrl: '{{ aPlayer.sChannelUrl }}',
            });
        }, 5000);
    });
</script>